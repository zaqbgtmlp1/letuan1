	<script>
		function validate() {
		  // Get the value of the input field with id="numb"
		  let x = document.getElementById("sothe").value;
		  // If x is Not a Number or less than one or greater than 10
		  
		  if (isNaN(x) || x < 100000 || x > 999999) {
			let text1;
			text1 = "Số thẻ gồm 6 chữ số";
			document.getElementById("sothekhople").innerHTML = text1;
			document.getElementById("sothe	hople").innerHTML =""
		  }
		  else{
			let text1;
			text1 = "Số thẻ đúng định dạng";
			document.getElementById("sothekhople").innerHTML =""
			document.getElementById("sothehople").innerHTML = text1;
		  }
		  
		  let y = document.getElementById("cvv").value;
		  if (isNaN(y) || y < 100 || y > 999) {
			let text1;
			text1 = "CVV 3 chữ số";
			document.getElementById("cvvkhople").innerHTML = text1;
			document.getElementById("cvvhople").innerHTML =""
		  }
		  else{
			let text1;
			text1 = "CVV đúng định dạng";
			document.getElementById("cvvkhople").innerHTML =""
			document.getElementById("cvvhople").innerHTML = text1;
		  }
		}
	</script>